
@{
    ViewData["Title"] = "Create todo item";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Create</h2>
<div class="row">
    <div class="col-sm-12">
        @using (var form = Html.BeginForm("Create", "Todo", FormMethod.Post))
        {
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="text" name="Title" class="form-control" required id="exampleFormControlInput1" placeholder="">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        }
    </div>
</div>
